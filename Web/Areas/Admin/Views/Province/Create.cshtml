@model ProvinceCreateDTO

@{
    ViewData["Title"] = "Create New Province";
    ViewData["Header"] = "Create New Province";
    ViewData["HeaderIcon"] = "fas fa-plus-circle";
}

<div class="admin-form-container">
    <form asp-area="Admin" asp-controller="Province" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Province Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Province Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Province Code -->
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Province Code</label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Create Province
                </button>
            </div>
        </div>
    </form>
</div>

@section AdminScripts {
    <partial name="_ValidationScriptsPartial" />
}

@model ProvinceUpdateDTO

@{
    ViewData["Title"] = "Edit Province";
    ViewData["Header"] = "Edit Province";
    ViewData["HeaderIcon"] = "fas fa-edit";
    var provinceId = ViewBag.ProvinceId ?? 0;
}

<div class="admin-form-container">
    <form asp-area="Admin" asp-controller="Province" asp-action="Edit" asp-route-id="@provinceId" method="post">
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Province Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Code" class="form-label">Province Code</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </div>
    </form>
</div>

@section AdminScripts {
    <style>
        .admin-form-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .card {
            background-color: #222;
            border: 1px solid #333;
        }

        .card-footer {
            background-color: #1a1a1a;
            border-top: 1px solid #333;
        }

        .form-label {
            color: #fff;
        }

        .form-control {
            background-color: #2c2c2c;
            color: #fff;
            border: 1px solid #555;
        }

            .form-control:focus {
                background-color: #1c1c1c;
                color: #fff;
                border-color: #888;
            }
    </style>

    <partial name="_ValidationScriptsPartial" />
}

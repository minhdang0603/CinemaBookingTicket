@model GenreCreateDTO

@{
    ViewData["Title"] = "Create New Genre";
    ViewData["Header"] = "Create New Genre";
    ViewData["HeaderIcon"] = "fas fa-plus-circle";
}

<div class="admin-form-container">
    <form id="createGenreForm" asp-area="Admin" asp-controller="Genre" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Genre Name</label>
                            <input asp-for="Name" class="form-control" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <input asp-for="Description" class="form-control" required>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-start">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Create Genre
                </button>
            </div>
        </div>
    </form>
</div>

@section AdminScripts {
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = "Phim Đang Chiếu";
}

@section Styles {
    <link href="~/css/public/movie-list.css" rel="stylesheet" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content text-center">
            <h1 class="hero-title">
                <i class="fas fa-film me-3 text-red"></i>
                Phim Đang Chiếu
            </h1>
            <p class="hero-subtitle">
                Danh sách các phim hiện đang chiếu rạp trên toàn quốc 29/06/2025.
                Xem lịch chiếu phim, giá vé tiện lợi, đặt vé nhanh chỉ với 1 bước!
            </p>
        </div>
    </div>
</section>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 col-md-4">
            <div class="filter-sidebar">
                <div class="mb-4">
                    <h6 class="filter-title">
                        <i class="fas fa-sort me-2"></i>
                        Sắp xếp
                    </h6>
                    <div class="custom-dropdown">
                        <span>Phổ biến</span>
                    </div>
                </div>

                <div class="mb-4">
                    <h6 class="filter-title">
                        <i class="fas fa-tags me-2"></i>
                        Thể loại
                    </h6>
                    <div class="custom-dropdown">
                        <span>Tất cả</span>
                    </div>
                </div>

                <div class="mb-4">
                    <h6 class="filter-title">
                        <i class="fas fa-language me-2"></i>
                        Ngôn ngữ
                    </h6>
                    <div class="custom-dropdown">
                        <span>Tất cả</span>
                    </div>
                </div>

                <div class="mt-4">
                    <h6 class="filter-title">Thể loại phổ biến</h6>
                    <div class="genre-badges">
                        <span class="genre-badge">Hành động</span>
                        <span class="genre-badge blue">Kinh dị</span>
                        <span class="genre-badge purple">Hài</span>
                        <span class="genre-badge pink">Tình cảm</span>
                        <span class="genre-badge cyan">Gia đình</span>
                    </div>
                </div>
            </div>
        </div>


@{
    ViewData["Title"] = "Phim Đang Chiếu";
}

@section Styles {
    <link href="~/css/public/movie-list.css" rel="stylesheet" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content text-center">
            <h1 class="hero-title">
                <i class="fas fa-film me-3 text-red"></i>
                Phim Đang Chiếu
            </h1>
            <p class="hero-subtitle">
                Danh sách các phim hiện đang chiếu rạp trên toàn quốc 29/06/2025.
                Xem lịch chiếu phim, giá vé tiện lợi, đặt vé nhanh chỉ với 1 bước!
            </p>
        </div>
    </div>
</section>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 col-md-4">
            <div class="filter-sidebar">
                <div class="mb-4">
                    <h6 class="filter-title">
                        <i class="fas fa-sort me-2"></i>
                        Thể Loại Phim
                    </h6>
                    <select class="custom-dropdown" id="genreFilter">
                        <option value="">-- Chọn thể loại --</option>
                        @if (ViewBag.Genres != null)
                        {
                            @foreach (var genre in ViewBag.Genres)
                            {
                                <option value="@genre.Value">@genre.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-4">
                    <h6 class="filter-title">
                        <i class="fas fa-tags me-2"></i>
                        Năm Phát Hành
                    </h6>
                    <select class="custom-dropdown" id="yearFilter">
                        <option value="">-- Chọn năm --</option>
                        @if (ViewBag.Years != null)
                        {
                            @foreach (var year in ViewBag.Years)
                            {
                                <option value="@year.Value">@year.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-4">
                    <h6 class="filter-title">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Địa Điểm Chiếu
                    </h6>
                    <select class="custom-dropdown" id="provinceFilter">
                        <option value="">-- Chọn tỉnh thành --</option>
                        @if (ViewBag.Provinces != null)
                        {
                            @foreach (var province in ViewBag.Provinces)
                            {
                                <option value="@province.Value">@province.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="mt-4">
                    <h6 class="filter-title">Thể loại phổ biến</h6>
                    <div class="genre-badges">
                        @if (ViewBag.Genres != null)
                        {
                            var genres = ViewBag.Genres as IEnumerable<SelectListItem>;
                            if (genres != null)
                            {
                                foreach (var genre in genres.Take(5))
                                {
                                    <span class="genre-badge" data-genre-id="@genre.Value">@genre.Text</span>
                                }
                            }
                        }
                        else
                        {
                            <span class="genre-badge" data-genre-id="1">Hành động</span>
                            <span class="genre-badge blue" data-genre-id="2">Kinh dị</span>
                            <span class="genre-badge purple" data-genre-id="3">Hài</span>
                            <span class="genre-badge pink" data-genre-id="4">Tình cảm</span>
                            <span class="genre-badge cyan" data-genre-id="5">Gia đình</span>
                        }
                    </div>
                </div>

                <!-- Reset Filters Button -->
                <div class="mt-4">
                    <button class="btn btn-outline-light btn-sm w-100" id="resetFilters">
                        <i class="fas fa-undo me-2"></i>
                        Đặt lại bộ lọc
                    </button>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <div class="movie-content-wrapper">
                <!-- Results Info -->
                <div class="results-info">
                    <div class="text-muted">
                        <i class="fas fa-film me-2"></i>
                        Hiển thị 1-6 trong tổng số 24 phim
                    </div>
                    <div class="text-muted">
                        Trang 1 / 4
                    </div>
                </div>

                <div class="movie-grid">
                    <!-- Movie Card 1 -->
                    <div class="movie-card">
                        <div class="movie-poster">
                            <img src="https://cdn.moveek.com/storage/media/cache/short/684701a026f4b224948393.jpg"
                                alt="Út Lan: Oán Linh Giữ Của">
                            <div class="movie-actions">
                                <button class="action-btn">
                                    <i class="far fa-heart"></i>
                                </button>
                                <button class="action-btn">
                                    <i class="fas fa-star"></i>
                                </button>
                            </div>
                        </div>
                        <div class="movie-info">
                            <h3 class="movie-title">Út Lan: Oán Linh Giữ Của</h3>
                            <div class="movie-details">
                                <span class="release-date">
                                    <i class="fas fa-calendar-alt me-1"></i>

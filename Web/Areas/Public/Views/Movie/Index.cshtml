                    <div class="cinema-header" onclick="toggleCinemaGroup(this)">
                        <div class="d-flex align-items-center">
                            <img src="https://images.unsplash.com/photo-1489599003021-3d2ad2429a0a?ixlib=rb-4.0.3&w=50&h=50&fit=crop&crop=center"
                                 class="cinema-logo me-3">
                            <div>
                                <h5 class="cinema-name mb-0">BHD Star Cineplex</h5>
                                <p class="cinema-count mb-0">5 rạp</p>
                            </div>
                        </div>
                        <i class="fas fa-chevron-down cinema-toggle"></i>
                    </div>
                    <div class="cinema-locations">
                        <div class="cinema-item" onclick="toggleShowtimes(this)">
                            <h6 class="location-name">BHD Star 3/2</h6>
                            <p class="location-address">Lầu 4, Siêu Thị Vincom 3/2, 3C Đường 3/2, Q. 10</p>
                            <div class="showtimes-grid">
                                <span class="showtime-slot">11:15</span>
                                <span class="showtime-slot">14:00</span>
                                <span class="showtime-slot">16:45</span>
                                <span class="showtime-slot">19:30</span>
                                <span class="showtime-slot">22:15</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/public/movie-detail.js"></script>
}

            color: #ffffff;
            border: 1px solid #333333;
            border-radius: 5px;
            padding: 8px;
        }

        select option {
            background-color: #000000 !important;
            color: #ffffff !important;
            padding: 10px;
        }
        

        /* Cinema List Styles */
        .cinema-group {

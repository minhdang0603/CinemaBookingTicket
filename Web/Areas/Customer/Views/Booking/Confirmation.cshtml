@{
    ViewData["Title"] = "Confirmation - Book Ticket";
}

@section Styles {
    <link rel="stylesheet" href="~/css/customer/booking/confirmation.css" asp-append-version="true" />
}

<!-- Step Indicator -->
<div class="step-indicator">
    <div class="container">
        <div class="row">
            <div class="col-3">
                <div class="step-item completed" data-step="1">
                    <div class="step-icon">
                        <i class="fas fa-th"></i>   
                    </div>
                    <span>Chọn ghế</span>
                </div>
            </div>
            <div class="col-3">
                <div class="step-item completed" data-step="2">
                    <div class="step-icon">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <span>Bắp nước</span>
                </div>
            </div>
            <div class="col-3">
                <div class="step-item completed" data-step="3">
                    <div class="step-icon">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <span>Thanh toán</span>
                </div>
            </div>
            <div class="col-3">
                <div class="step-item active" data-step="4">
                    <div class="step-icon">
                        <i class="fas fa-inbox"></i>
                    </div>
                    <span>Thông tin vé</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container booking-content">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="ticket-info-section fade-in">
                <h3 class="section-title mb-4">
                    <i class="fas fa-ticket-alt me-2"></i>
                    Thông tin vé của bạn
                </h3>

                <div class="confirmation-modal">
                    <div class="modal-header">
                        <h4>Xác nhận đặt vé thành công!</h4>
                        <a href="@Url.Action("Index", "Home")" class="close-btn">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                    <div class="modal-body">
                        <div class="ticket-details">
                            <div class="detail-row">
                                <span class="label">Phim:</span>
                                <span class="value">Doraemon Movie 44: Nobita Và Cuộc Phiêu Lưu Vào Thế Giới Trong Tranh</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Rạp:</span>
                                <span class="value">Beta Đan Phượng</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Phòng chiếu:</span>
                                <span class="value">P3</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Suất chiếu:</span>
                                <span class="value">11:00 27/06/2025</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Ghế:</span>
                                <span class="value">@ViewBag.SelectedSeats</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Thông tin khách hàng:</span>
                                <span class="value">
                                    @ViewBag.CustomerName<br>
                                    @ViewBag.CustomerPhone
                                    @if (!string.IsNullOrEmpty(ViewBag.CustomerEmail))
                                    {
                                        <br>@ViewBag.CustomerEmail
                                    }
                                </span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Hình thức thanh toán:</span>
                                <span class="value">@ViewBag.PaymentMethod</span>
                            </div>
                            <div class="detail-row total-row">
                                <span class="label">Tổng tiền:</span>
                                <span class="value">@ViewBag.TotalAmount ₫</span>
                            </div>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-proceed-payment" onclick="proceedToPayment()">
                                <i class="fas fa-credit-card me-2"></i>
                                Thanh toán ngay
                            </button>
                            <div class="mt-3">
                                <a href="@Url.Action("Index", "Booking")" class="btn btn-custom btn-back">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Đặt vé mới
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function proceedToPayment() {
            // Add loading state
            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...';
            btn.disabled = true;
            
            // Here you would integrate with actual payment gateway
            alert('Chuyển hướng đến cổng thanh toán...');
            
            // For demo purposes, simulate payment success
            setTimeout(() => {
                alert('Thanh toán thành công! Vé đã được gửi đến email của bạn.');
                window.location.href = '@Url.Action("Index", "Home")';
            }, 2000);
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            // Add fade-in animation with stagger effect
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach((el, index) => {
                setTimeout(() => {
                    el.style.opacity = '1';
                }, 100 + (index * 200));
            });
            
            // Add hover effects to detail rows
            const detailRows = document.querySelectorAll('.detail-row');
            detailRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(5px)';
                });
                
                row.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                });
            });
            
            // Add success sound effect (optional)
            if (typeof Audio !== 'undefined') {
                try {
                    // You can add a success sound here
                    // const successSound = new Audio('/sounds/success.mp3');
                    // successSound.play().catch(e => console.log('Sound play failed:', e));
                } catch (e) {
                    console.log('Audio not supported');
                }
            }
            
            // Auto-scroll to content on mobile
            if (window.innerWidth <= 768) {
                setTimeout(() => {
                    document.querySelector('.ticket-info-section').scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }, 500);
            }
        });
        
        // Add keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Escape to go back
            if (e.key === 'Escape') {
                window.location.href = '@Url.Action("Index", "Booking")';
            }
        });
    </script>
}

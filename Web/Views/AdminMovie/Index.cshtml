<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet">

   
</head>
<body>
    <div class="main-container">
        <!-- Header -->
        <div class="page-header">
            <button class="btn btn-create" onclick="openCreateModal()">
                <i class="fas fa-plus"></i> Create New
            </button>
            <h1><i class="fas fa-film"></i> Movie List</h1>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            <!-- Success Message Demo -->
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Movie updated successfully!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>

            <!-- Search Area -->
            <div class="search-area">
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" placeholder="Search movies...">
                                <label>Search Movies</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating">
                                <select class="form-control">
                                    <option value="">All Status</option>
                                    <option value="now showing">Now Showing</option>
                                    <option value="coming soon">Coming Soon</option>
                                    <option value="ended">Ended</option>
                                </select>
                                <label>Filter by Status</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-primary w-100" style="height: 58px;" type="submit">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Movies Table -->
            <div class="movie-table">
                <table class="table mb-0">
                    <thead class="table-header">
                        <tr>
                            <th>Poster</th>
                            <th>Movie Details</th>
                            <th>Duration</th>
                            <th>Status</th>
                            <th>Rating</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Movie 1 -->
                        <tr>
                            <td>
                                <img src="https://via.placeholder.com/60x80/4f46e5/ffffff?text=AVATAR" alt="Avatar" class="movie-poster">
                            </td>
                            <td>
                                <div class="movie-title">Avatar: The Way of Water</div>
                                <div class="movie-meta">
                                    <small><i class="fas fa-user"></i> James Cameron</small><br>
                                    <small><i class="fas fa-calendar"></i> 2022</small>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">192 min</span>
                            </td>
                            <td>
                                <span class="status-badge status-now-showing">Now Showing</span>
                            </td>
                            <td>
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-star"></i> PG-13
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-action btn-edit" onclick="editMovie(1)">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="btn btn-action btn-delete" onclick="deleteMovie(1, 'Avatar: The Way of Water')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>

                        <!-- Movie 2 -->
                        <tr>
                            <td>
                                <img src="https://via.placeholder.com/60x80/dc2626/ffffff?text=SPIDER" alt="Spider-Man" class="movie-poster">
                            </td>
                            <td>
                                <div class="movie-title">Spider-Man: No Way Home</div>
                                <div class="movie-meta">
                                    <small><i class="fas fa-user"></i> Jon Watts</small><br>
                                    <small><i class="fas fa-calendar"></i> 2021</small>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">148 min</span>
                            </td>
                            <td>
                                <span class="status-badge status-coming-soon">Coming Soon</span>
                            </td>
                            <td>
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-star"></i> PG-13
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-action btn-edit" onclick="editMovie(2)">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="btn btn-action btn-delete" onclick="deleteMovie(2, 'Spider-Man: No Way Home')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>

                        <!-- Movie 3 -->
                        <tr>
                            <td>
                                <img src="https://via.placeholder.com/60x80/059669/ffffff?text=TOP+GUN" alt="Top Gun" class="movie-poster">
                            </td>
                            <td>
                                <div class="movie-title">Top Gun: Maverick</div>
                                <div class="movie-meta">
                                    <small><i class="fas fa-user"></i> Joseph Kosinski</small><br>
                                    <small><i class="fas fa-calendar"></i> 2022</small>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">131 min</span>
                            </td>
                            <td>
                                <span class="status-badge status-ended">Ended</span>
                            </td>
                            <td>
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-star"></i> PG-13
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-action btn-edit" onclick="editMovie(3)">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="btn btn-action btn-delete" onclick="deleteMovie(3, 'Top Gun: Maverick')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>

                        <!-- Movie 4 -->
                        <tr>
                            <td>
                                <img src="https://via.placeholder.com/60x80/7c3aed/ffffff?text=BLACK" alt="Black Panther" class="movie-poster">
                            </td>
                            <td>
                                <div class="movie-title">Black Panther: Wakanda Forever</div>
                                <div class="movie-meta">
                                    <small><i class="fas fa-user"></i> Ryan Coogler</small><br>
                                    <small><i class="fas fa-calendar"></i> 2022</small>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">161 min</span>
                            </td>
                            <td>
                                <span class="status-badge status-now-showing">Now Showing</span>
                            </td>
                            <td>
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-star"></i> PG-13
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-action btn-edit" onclick="editMovie(4)">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="btn btn-action btn-delete" onclick="deleteMovie(4, 'Black Panther: Wakanda Forever')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav>
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <!-- Create/Edit Modal -->
    <div class="modal fade" id="movieModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Create New Movie</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="movieForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="title" required>
                                    <label for="title">Movie Title</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="director">
                                    <label for="director">Director</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="duration" min="1" max="500">
                                    <label for="duration">Duration (minutes)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-control" id="status" required>
                                        <option value="">Select Status</option>
                                        <option value="now showing">Now Showing</option>
                                        <option value="coming soon">Coming Soon</option>
                                        <option value="ended">Ended</option>
                                    </select>
                                    <label for="status">Status</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="ageRating">
                                    <label for="ageRating">Age Rating (e.g., PG-13)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="url" class="form-control" id="posterUrl">
                                    <label for="posterUrl">Poster URL</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control" id="description" style="height: 100px"></textarea>
                            <label for="description">Description</label>
                        </div>
                        <div class="form-floating">
                            <input type="text" class="form-control" id="cast">
                            <label for="cast">Cast (comma separated)</label>
                        </div>
                        <div class="form-floating">
                            <input type="url" class="form-control" id="trailerUrl">
                            <label for="trailerUrl">Trailer URL</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="saveMovie()">
                        <i class="fas fa-save"></i> Save Movie
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this movie?</p>
                    <p><strong id="deleteMovieTitle"></strong></p>
                    <p class="text-muted">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                        <i class="fas fa-trash"></i> Delete Movie
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Simple demo functions - no actual logic
        function openCreateModal() {
            document.getElementById('modalTitle').textContent = 'Create New Movie';
            document.getElementById('movieForm').reset();
            
            const modal = new bootstrap.Modal(document.getElementById('movieModal'));
            modal.show();
        }

        function editMovie(movieId) {
            document.getElementById('modalTitle').textContent = 'Edit Movie';
            
            // Demo data for editing
            const sampleData = {
                1: { title: 'Avatar: The Way of Water', director: 'James Cameron', duration: 192 },
                2: { title: 'Spider-Man: No Way Home', director: 'Jon Watts', duration: 148 },
                3: { title: 'Top Gun: Maverick', director: 'Joseph Kosinski', duration: 131 },
                4: { title: 'Black Panther: Wakanda Forever', director: 'Ryan Coogler', duration: 161 }
            };
            
            const movie = sampleData[movieId];
            if (movie) {
                document.getElementById('title').value = movie.title;
                document.getElementById('director').value = movie.director;
                document.getElementById('duration').value = movie.duration;
            }
            
            const modal = new bootstrap.Modal(document.getElementById('movieModal'));
            modal.show();
        }

        function saveMovie() {
            alert('Demo: Movie would be saved here!');
            bootstrap.Modal.getInstance(document.getElementById('movieModal')).hide();
        }

        function deleteMovie(movieId, movieTitle) {
            document.getElementById('deleteMovieTitle').textContent = movieTitle;
            
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        function confirmDelete() {
            alert('Demo: Movie would be deleted here!');
            bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
        }
    </script>
</body>
</html>